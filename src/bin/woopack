#!/bin/sh
task=$1
disableBuiltTask=false
if echo "$*" | grep -q "\(\s\-\-\?\(help\|h\|version\|v\)\(\s\|$\)\)"; then
  disableBuiltTask=true
fi

if [ "$task" = "build" ] && [ "$disableBuiltTask" = false ]; then
  command=$(eval "woopack-cli sh-$*")
  if [ "$command" != "" ]; then
    eval "$command"
  fi
else
  woopack-cli "$@"
fi
